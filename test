
import pandas as pd

def dataset_fct(dataset):
    

    print("\nShape de la frame :\n", dataset.shape)
    
    #print("\nNoms des colonnes :\n", dataset.columns)
    #print("\nPremières lignes :\n", dataset.head(50))
    #print("\nDernières lignes :\n", dataset.tail(10))
    
    #On regarde les differentes classes presentes dans la colonne label
    print("\n ELEMENTS DE LA COLONNE LABEL")
    print(dataset.Label.unique())
        
    #On compte le nombre de fois que chaque element revient
    print("\n ELEMENTS DE LA COLONNE LABEL AVEC NB DE FOIS QU'ILS REVIENNENT")
    print(dataset.Label.value_counts())
        
    #On le fait pour chaque colonne 
    for colonne in dataset:
        compteur = 0
        for valeur in dataset[colonne]:
            if valeur == 0:
                compteur +=1
                
        if compteur == len(dataset):
            print(colonne) 
            #del dataset[colonne]
        
  


dataset_W_2802 = pd.read_csv("Wednesday-28-02-2018_TrafficForML_CICFlowMeter.csv")
dataset_W_2102 = pd.read_csv("Wednesday-21-02-2018_TrafficForML_CICFlowMeter.csv")
dataset_W_1402 = pd.read_csv("Wednesday-14-02-2018_TrafficForML_CICFlowMeter.csv")

print("\n\n------------  dataset_W_2102  ------------")
dataset_fct(dataset_W_2102)
print("\n\n------------  dataset_W_2802  ------------")
dataset_fct(dataset_W_2802)
print("\n\n------------  dataset_W_1402  ------------")
dataset_fct(dataset_W_1402)    
